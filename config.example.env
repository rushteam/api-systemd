# API-Systemd 环境配置示例文件
# 复制此文件为 .env 并根据需要修改配置

# 服务器配置
SERVER_PORT=:8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
SHUTDOWN_TIMEOUT=10s

# 安全配置
ENABLE_AUTH=false
API_KEY=your-secret-api-key-here
ALLOWED_HOSTS=*
RATE_LIMIT_RPS=100
MAX_UPLOAD_SIZE=104857600  # 100MB

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_FILE=  # 空表示输出到stdout
